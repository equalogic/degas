{
  "name": "@madsci/degas",
  "version": "0.3.0",
  "description": "Functions for image file reading, manipulation and validation, in TypeScript",
  "author": "Madscience Ltd",
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/madscience/degas"
  },
  "scripts": {
    "prebuild": "rimraf dist && npm run barrels:generate",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "cp package.json README.md dist/",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .ts --ignore-path .gitignore . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "rimraf test/.results && mkdirp test/.results && jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "barrels:generate": "barrelsby --config barrelsby.json"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.1",
    "@madsci/ts-class-initializable": "^1.0.1",
    "js-yaml": "^3.13.1",
    "sharp": "^0.25.4"
  },
  "devDependencies": {
    "@types/hapi__joi": "^15.0.2",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.0",
    "@types/sharp": "^0.25.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.22.0",
    "barrelsby": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.2.9",
    "mkdirp": "^1.0.4",
    "prettier": "^2.0.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.0.0",
    "typescript": "^3.4.5"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "npm run barrels:generate && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  },
  "jest-junit": {
    "outputDirectory": "./test/.results",
    "outputName": "junit.xml"
  }
}
